  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development webpack --env.platform=client",
    "start:server": "NODE_ENV=development webpack --env.platform=server",
    "build": "NODE_ENV=production webpack --env.platform=client",
    "build:server": "NODE_ENV=production webpack --env.platform=server",
    "run:dev": "NODE_ENV=development nodemon build/js/server.js",
    "run:prod": "NODE_ENV=production node build/js/server.js",
    "deploy:dev": "yarn clean && yarn build && yarn build:server && (yarn start & yarn start:server)",
    "deploy:prod": "yarn clean && yarn build && yarn build:server && yarn run:prod",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage --colors",
    "test:jest:clean": "jest --clearCache",
    "test:lint:js": "eslint src/ --ext=js --ext=jsx --ext=ts --ext=tsx --fix",
    "test:lint:styled": "stylelint --config=.stylelintrc '**/*.styled.(js|jsx|ts|tsx)'",
    "clean": "rm -rf build"
  },
  "path": {
    "client": "./src/client/index.tsx",
    "server": "./src/server/index.tsx",
    "output": "./build"
  },
