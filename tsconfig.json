{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["jest", "react"]
  },
  "files": [
    "./index.d.ts",
    "./images.d.ts",
    "./fonts.d.ts",
    "./jest.d.ts"
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**/*.(ts|tsx|js|jsx)",
    "**/?(*.)+(spec|test).(ts|tsx|js|jsx)"
  ]
}
