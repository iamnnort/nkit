{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["jest", "react"],
    "typeRoots": ["./@types", "./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@test/*": ["test/*"],
      "@assets/*": ["src/assets/*"],
      "@client/*": ["src/client/*"],
      "@common/*": ["src/common/*"],
      "@server/*": ["src/server/*"],
      "@locales/*": ["src/locales/*"]
    }
  },
  "files": ["./index.d.ts", "./images.d.ts", "./fonts.d.ts", "./jest.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/__tests__/**/*.(ts|tsx|js|jsx)", "**/?(*.)+(spec|test).(ts|tsx|js|jsx)"]
}
